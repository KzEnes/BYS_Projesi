@model KTUVeriTabani.Models.LoginViewModel

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Login</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    .content-container {
        max-width: 450px;
    }

    .login-card {
        background: #f9fafb;
        padding: 50px; /* Adjusted padding */
        border-radius: 20px;
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.15);
        max-width: 700px; /* Adjusted max width */
        width: 100%;
    }

        .login-card h2 {
            text-align: center;
            margin-bottom: 35px; /* Adjusted margin */
            font-size: 2rem; /* Adjusted font size */
            color: #2d3748; /* Darker color */
        }

    .role-selection {
        display: flex;
        justify-content: center;
        gap: 50px; /* Adjusted gap between roles */
        margin-bottom: 35px; /* Adjusted margin */
    }

        .role-selection label {
            cursor: pointer;
            text-align: center;
            color: #4a5568; /* Added color for labels */
        }

        .role-selection img {
            width: 110px; /* Adjusted icon size */
            height: 110px; /* Adjusted icon size */
            transition: transform 0.2s ease-in-out; /* Added hover effect */
        }

            .role-selection img:hover {
                transform: scale(1.1); /* Slightly enlarges on hover */
            }

        .role-selection input {
            display: none;
        }

        .role-selection label input:checked + img {
            border: 6px solid #3182ce; /* Changed border color */
            border-radius: 12%;
        }

    h2 {
        margin-bottom: 25px;
        font-size: 2rem; /* Adjusted font size */
        color: #2d3748; /* Darker color */
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 25px; /* Adjusted margin */
    }

    button {
        font-size: 1.2rem;
        padding: 14px; /* Adjusted padding */
        background-color: #4c51bf; /* Updated button color */
        color: #fff;
        border: none;
        border-radius: 10px;
        transition: background-color 0.3s ease-in-out, transform 0.2s;
    }

        button:hover {
            background-color: #434190; /* Darker hover color */
            transform: scale(1.05); /* Slight hover effect */
        }
</style>

<div class="login-card">
	<h2>KTU BYS</h2>
	<form asp-action="LoginUser" method="post" id="loginForm">
		<div class="role-selection">
			<label>
				<input asp-for="Role" type="radio" value="Student" checked/>
				<img src="~/images/Students.png" alt="Student" />
				<div>Student</div>
			</label>
			<label>
				<input asp-for="Role" type="radio" value="Advisor" />
				<img src="~/images/Advisors.png" alt="Advisor" />
				<div>Advisor</div>
			</label>
		</div>

		<div class="form-group">
			<label for="Username">Username</label>
			<input asp-for="Username" class="form-control" id="Username" placeholder="Enter your username" />
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label for="Password">Password</label>
			<input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Enter your password" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary w-100">Login</button>
		<div class="text-center mt-3">
			<a href="@Url.Action("ForgotPassword", "Account")" class="text-decoration-none">Forgot Password</a>
		</div>
	</form>

	@if (ViewBag.Message != null)
	{
		<p style="color: red; text-align: center; margin-top: 10px;">@ViewBag.Message</p>
	}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

