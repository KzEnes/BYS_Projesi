@model KTUVeriTabani.Models.LoginViewModel
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Login</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    .content-container {
        max-width: 500px;
        margin: auto;
        padding: 20px;
    }

    .login-card {
        background: linear-gradient(135deg, #d3d3d3, #e6e6e6);
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.3);
        max-width: 750px;
        width: 100%;
        transition: transform 0.3s ease-in-out;
    }

        .login-card:hover {
            transform: translateY(-8px);
        }

        .login-card h2 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.4rem;
            color: #333;
            font-weight: 700;
        }

    .role-selection {
        display: flex;
        justify-content: space-around;
        margin-bottom: 30px;
    }

        .role-selection label {
            cursor: pointer;
            text-align: center;
            color: #555;
            font-weight: 600;
        }

        .role-selection img {
            width: 120px;
            height: 120px;
            border: 3px solid transparent;
            border-radius: 50%;
            transition: all 0.3s ease-in-out;
            box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.2);
        }

            .role-selection img:hover {
                transform: scale(1.15);
                border-color: #777;
            }

        .role-selection input {
            display: none;
        }

        .role-selection label input:checked + img {
            border: 4px solid #555;
            box-shadow: 0px 4px 12px rgba(85, 85, 85, 0.5);
        }

    h2 {
        margin-bottom: 20px;
        font-size: 2.2rem;
        color: #4a4a4a;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

        .form-group label {
            font-weight: 600;
            color: #555;
        }

        .form-group input {
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 10px;
            transition: border-color 0.3s;
            background: #f9f9f9;
        }

            .form-group input:focus {
                border-color: #777;
                outline: none;
            }

    button {
        font-size: 1.2rem;
        padding: 12px 20px;
        background-color: #666;
        color: #fff;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s ease-in-out, transform 0.2s;
    }

        button:hover {
            background-color: #444;
            transform: scale(1.05);
        }
</style>

<div class="login-card">
	<h2>KTU BYS</h2>
	<form asp-action="LoginUser" method="post" id="loginForm">
		<div class="role-selection">
			<label>
				<input asp-for="Role" type="radio" value="Student" checked/>
				<img src="~/images/Students.png" alt="Student" />
				<div>Student</div>
			</label>
			<label>
				<input asp-for="Role" type="radio" value="Advisor" />
				<img src="~/images/Advisors.png" alt="Advisor" />
				<div>Advisor</div>
			</label>
		</div>

		<div class="form-group">
			<label for="Username">Username</label>
			<input asp-for="Username" class="form-control" id="Username" placeholder="Enter your username" />
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label for="Password">Password</label>
			<input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Enter your password" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary w-100">Login</button>
		<div class="text-center mt-3">
			<a href="@Url.Action("ForgotPassword", "Account")" class="text-decoration-none">Forgot Password</a>
		</div>
	</form>

	@if (ViewBag.Message != null)
	{
		<p style="color: red; text-align: center; margin-top: 10px;">@ViewBag.Message</p>
	}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

